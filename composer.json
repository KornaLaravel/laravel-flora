{
    "name": "qruto/laravel-initializer",
    "description": "A convenient way to initialize your application",
    "keywords": [
        "qruto",
        "laravel-initializer",
        "install",
        "update",
        "deploy",
        "init",
        "initialize",
        "exec",
        "command",
        "tasks",
        "process"
    ],
    "homepage": "https://github.com/qruto/laravel-initializer",
    "license": "MIT",
    "authors": [
        {
            "name": "Slava Razum",
            "email": "razum@qruto.to",
            "homepage": "https://github.com/slavarazum",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/bus": "^6.0 || ^7.0 || ^8.0 || ^9.0",
        "illuminate/config": "^6.0 || ^7.0 || ^8.0 || ^9.0",
        "illuminate/console": "^6.0 || ^7.0 || ^8.0 || ^9.0",
        "illuminate/container": "^6.0 || ^7.0 || ^8.0 || ^9.0",
        "illuminate/contracts": "^6.0 || ^7.0 || ^8.0 || ^9.0",
        "illuminate/support": "^6.0 || ^7.0 || ^8.0 || ^9.0",
        "nunomaduro/laravel-desktop-notifier": "^2.6",
        "spatie/laravel-package-tools": "^1.13",
        "symfony/process": "^4.4.11 || ^5.0.9 || ^6.0.3"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "mockery/mockery": "^1.3",
        "nunomaduro/collision": "^6.3",
        "nunomaduro/larastan": "^2.2",
        "orchestra/testbench": "^7.11",
        "pestphp/pest": "^1.22",
        "pestphp/pest-plugin-laravel": "^1.3",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.2",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.14.6",
        "spatie/laravel-ray": "^1.31"
    },
    "autoload": {
        "psr-4": {
            "Qruto\\Initializer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Qruto\\Initializer\\Test\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Qruto\\Initializer\\InitializerServiceProvider"
            ]
        }
    },
    "suggest": {
        "laravel/framework": "Required to use additional MakeCronTask, MakeEchoServerConfig and MakeSupervisorConfig Jobs."
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
